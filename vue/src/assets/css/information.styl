.container {
  margin: auto;
  .el-form {
    .el-form-item__content {
      .el-i {
        position: absolute;
        top: 0;
        left: 0;
        line-height: 40px;

        i {
          font-size: 18px;
          color: #8a8a8a;
        }
      }

      .el-input {
        .el-input__inner {
          background-color: #222;
          border: 0;
          color: #ccc;
        }

        input::-webkit-input-placeholder { /* WebKit browsers */
          color: #666;
        }

        input:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
          color: #666;
        }

        input::-moz-placeholder { /* Mozilla Firefox 19+ */
          color: #666;
        }

        input:-ms-input-placeholder { /* Internet Explorer 10+ */
          color: #666;
        }
      }

      .el-input__suffix {
        .el-input__validateIcon {
          color: #ccc;
        }
      }

      .el-form-item__error {
        color: #8a8a8a;
      }
    }

    .el-form-item__content {
      .btn-box {
        .i-btn:first-of-type {
          margin-right: 20px;
        }

        .i-btn {
          margin-top: 20px;
          color: #8a8a8a;
          font-size: 25px;
          cursor: pointer;
        }
      }
    }
  }
}